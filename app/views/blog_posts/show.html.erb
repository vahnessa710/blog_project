<%= link_to "Back to Posts", root_path, class: "back-button" %>

<h2><%= @blog_post.title %></h2>
<div class="post">
  <%= @blog_post.body %> 

  <%= link_to user_signed_in? ? edit_blog_post_path(@blog_post) : new_user_session_path do %>
    <i class="fa-regular fa-pen-to-square edit-icon-container"></i>
    <% end %>

</div>



<%= button_to "Delete", 
            user_signed_in? ? @blog_post : new_user_session_path, 
            method: user_signed_in? ? :delete : nil, 
            data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "delete-button" %>

